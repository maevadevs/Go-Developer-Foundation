package main

import "fmt"

// Struct With Receiver Function
// *****************************
type contactInfo struct {
	email    string
	zip_code int
}
type person struct {
	first_name string
	last_name  string
	contact    contactInfo
}

// Receiver function for "person"
func (p person) print() {
	fmt.Printf("%+v\n", p)
}
func (p person) updateName(new_first_name string) {
	p.first_name = new_first_name
}

func main() {
	jim := person{
		first_name: "Jim",
		last_name:  "Patterson",
		contact: contactInfo{
			email:    "jim@patterson.com",
			zip_code: 98765,
		},
	}
	// Calling a receiver function
	jim.print()
	jim.updateName("Jimmy")
	jim.print()
	// Why did it not update? --> Pointers
    
}

// > go run main.go
// > go build main.go && ./main.exe
